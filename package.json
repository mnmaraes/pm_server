{
  "name": "central-server",
  "version": "0.0.1",
  "description": "The JSON-RPC server prototype for central ideation",
  "main": "index.js",
  "author": "mnmaraes",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "check-types": "tsc",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "format": "yarn run prettier --write",
    "check-format": "yarn run prettier --list-different",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "validate": "run-p check-types check-format lint && run-s test"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "jayson": "^3.2.0",
    "pg": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run check-types && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|ts|tsx)": [
      "eslint"
    ],
    "**/*.+(js|json|ts|tsx)": [
      "prettier --write",
      "jest --findRelatedTests"
    ]
  }
}
